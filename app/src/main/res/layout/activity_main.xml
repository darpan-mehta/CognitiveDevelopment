<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/rdoor"
        android:text="Red Door"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/bdoor"
        android:text="Blue Door"
        android:layout_below="@+id/rdoor"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/gdoor"
        android:text="Green Door"
        android:layout_below="@id/bdoor"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/trace"
        android:text="Go to trace Activity"
        android:layout_below="@id/gdoor"
        android:onClick="goToTrace"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Door"
        android:id="@+id/button"
        android:layout_below="@+id/trace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToDoor"/>


</RelativeLayout>
