<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.cogdev.cognitivedevelopment.DoorScreen"
    android:background="@drawable/doors">


    <ImageButton
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:id="@+id/imageButtonRed"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:onClick="toastIncorrect"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:id="@+id/imageButtonBlue"
        android:layout_alignTop="@+id/imageButtonRed"
        android:layout_toRightOf="@+id/imageButtonRed"
        android:layout_toEndOf="@+id/imageButtonRed"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:background="@android:color/transparent"
        android:onClick="toastIncorrect"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:id="@+id/imageButtonGreen"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButtonBlue"
        android:layout_toRightOf="@+id/imageButtonBlue"
        android:layout_toEndOf="@+id/imageButtonBlue"
        android:onClick="toastCorrect"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:id="@+id/imageButtonPlay"
        android:layout_above="@+id/imageButtonGreen"
        android:layout_alignLeft="@+id/imageButtonGreen"
        android:layout_alignStart="@+id/imageButtonGreen"
        android:layout_marginLeft="13dp"
        android:background="@android:color/transparent"/>
</RelativeLayout>
